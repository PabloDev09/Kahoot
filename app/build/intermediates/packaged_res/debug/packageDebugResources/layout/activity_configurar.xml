<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/configurar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.ConfigurarActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/configurarAppbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#5F0F4E"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/configurarAppbarIcon"
            android:layout_width="57dp"
            android:layout_height="46dp"
            android:src="@mipmap/ic_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/configurarAppbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configurar"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:fontFamily="@font/montserratblack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvNumeroPreguntasCreadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preguntas creadas: "
        android:textSize="18sp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toTopOf="@+id/cardContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configurarAppbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginTop="30dp"
        android:outlineSpotShadowColor="#5F0F4E"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/configurarAppbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Crear nueva pregunta"
                android:textColor="#5F0F4E"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etPreguntaInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#5F0F4E"
                android:fontFamily="@font/montserrat"
                android:hint="Ingresa tu pregunta"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCardTitle" />

            <EditText
                android:id="@+id/etRespuesta1Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#5F0F4E"
                android:fontFamily="@font/montserrat"
                android:hint="Respuesta 1"
                android:padding="12dp"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etPreguntaInput" />

            <EditText
                android:id="@+id/etRespuesta2Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#5F0F4E"
                android:fontFamily="@font/montserrat"
                android:hint="Respuesta 2"
                android:padding="12dp"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etRespuesta1Input" />

            <EditText
                android:id="@+id/etRespuesta3Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#5F0F4E"
                android:fontFamily="@font/montserrat"
                android:hint="Respuesta 3"
                android:padding="12dp"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etRespuesta2Input" />

            <EditText
                android:id="@+id/etRespuesta4Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#5F0F4E"
                android:fontFamily="@font/montserrat"
                android:hint="Respuesta 4"
                android:padding="12dp"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etRespuesta3Input" />

            <EditText
                android:id="@+id/etRespuestaCorrectaInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#5F0F4E"
                android:fontFamily="@font/montserrat"
                android:hint="NÃºmero de respuesta correcta (1-4)"
                android:padding="12dp"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etRespuesta4Input" />

            <Button
                android:id="@+id/btnGuardarButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#5F0F4E"
                android:fontFamily="@font/montserrat"
                android:padding="12dp"
                android:text="Guardar Pregunta"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etRespuestaCorrectaInput" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
